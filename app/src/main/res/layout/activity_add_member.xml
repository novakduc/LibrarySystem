<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="16dp"
              android:paddingRight="16dp">

    <TextView
        android:id="@+id/add_member_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/add_member_title"
        android:textColor="@color/primary_text_default_material_light"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_member_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="@string/add_member_name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/add_member_name_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="75"
            android:ems="10"
            android:hint="@string/add_member_name_hint"
            android:inputType="textPersonName|textCapWords"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_member_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="@string/add_member_address"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/add_member_address_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="75"
            android:ems="10"
            android:hint="@string/add_member_address_hint"
            android:inputType="textPostalAddress|textCapWords|textNoSuggestions"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_member_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="@string/add_member_phone"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/add_member_phone_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="75"
            android:ems="10"
            android:hint="@string/add_member_phone_hint"
            android:inputType="phone"/>
    </LinearLayout>

    <Button
        android:id="@+id/add_member_register_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="@string/add_member_register_button"/>
</LinearLayout>